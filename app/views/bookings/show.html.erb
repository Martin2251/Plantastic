<div class="container">
  <div class="row">
    <div class="col">
      <h1 class="mt-3">Booking confirmation</h1>
      <h2>You've booked the following:</h2>

      <p>Plant: <%= @booking.plant.name %></p>
      <p>Booking start date from <%= @booking.beginning_date %> to end date <%= @booking.end_date %></p>
      <p>Booking reference: <%= @booking.id %></p>

      <div class="col-sm-6">
        <div class="image-container">

        </div>
        <div class="info p-3">
          <h3><%= @booking.plant.name.capitalize %></h3>
          <p><strong>Â£<%= @booking.plant.price %></strong> a day</p>
          <p>Description: <%= @booking.plant.description.capitalize %></p>
          <p>Species: <%= @booking.plant.species.capitalize %></p>
        </div>
      </div>

      <%= link_to 'Edit booking', edit_booking_path(@booking), class: "btn-green"%>
      <%= link_to 'Back to all bookings', bookings_path, class: "btn-green" %>
      <%= link_to 'Add a review', new_booking_review_path(@booking), class: "btn-green" %>

    </div>

  </div>
</div>
