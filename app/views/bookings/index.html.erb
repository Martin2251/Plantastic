<div class="container big-container" >
  <div class="row">
     <div class="col">
      <div class="search-bar float-right mb-4">
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">search bookings</button>
        </form>
      </div>
    </div>
  </div>
  <div class="container main-section border-top border-bottom p-1">
    <div class="row justify-content-center m-1">
      <div class="col p-0">
        <div class="border-bottom pb-2" style="text-align: center"> Current </div>
          <div class="cards d-flex flex-wrap justify-content-around mt-3">
            <% @bookings.each do |booking| %>
              <div class="card mb-5" style="width: 18rem">
                <%#= cl_image_tag plant.photo.key, class: 'card-img-top cover' %>
                <div class="card-body">
                  <h5 class="card-title"><%= booking.plant.name %></h5>
                  <p>Booking ref: <%= link_to booking.id, booking_path(booking) %></p>
                  <%= link_to 'View booking', booking_path(booking), class: "btn btn-green" %>
                </div>
              </div>
            <% end %>
          </div>
      </div>


      <div class="col p-0">
       <div class="border-bottom pb-2" style="text-align: center"> Upcoming </div>
         <div class="cards d-flex flex-wrap justify-content-around mt-3">
            <% @bookings.each do |booking| %>
              <div class="card mb-5" style="width: 18rem">
                <%#= cl_image_tag plant.photo.key, class: 'card-img-top cover' %>
                <div class="card-body">
                  <h5 class="card-title"><%= booking.plant.name %></h5>
                  <p>Booking ref: <%= link_to booking.id, booking_path(booking) %></p>
                  <%= link_to 'View booking', booking_path(booking), class: "btn btn-green" %>
                </div>
              </div>
            <% end %>
          </div>
      </div>

      <div class="col p-0">
        <div class="border-bottom pb-2" style="text-align: center"> Past </div>
          <div class="cards d-flex flex-wrap justify-content-around mt-3">
            <% @bookings.each do |booking| %>
              <div class="card mb-5" style="width: 18rem">
                <%#= cl_image_tag plant.photo.key, class: 'card-img-top cover' %>
                  <div class="card-body">
                    <h5 class="card-title"><%= booking.plant.name %></h5>
                    <p>Booking ref: <%= link_to booking.id, booking_path(booking) %></p>
                    <%= link_to 'View booking', booking_path(booking), class: "btn btn-green" %>
                  </div>
                </div>
              <% end %>
            </div>
      </div>

    </div>
  </div>
  <div class="d-flex justify-content-center m-4">
    <div> <%= link_to 'Home', root_path %> </div>
</div>

</div>


