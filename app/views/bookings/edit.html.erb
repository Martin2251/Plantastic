<div class="container m-3">
  <div class="row">
    <div class="col-6 offset-3">
      <h2>Edit booking:</h2>

      <%= simple_form_for @booking do |f| %>
        <%= f.input :beginning_date%>
        <%= f.input :end_date, input_html: { class: "datepicker" } %>
        <%= f.submit %>
      <% end %>

      <%= link_to 'Back', booking_path, class: "btn btn-green mt-2"  %>
    </div>
  </div>
</div>
